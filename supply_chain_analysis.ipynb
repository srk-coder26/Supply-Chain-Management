import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from statsmodels.tsa.statespace.sarimax import SARIMAX
import warnings
warnings.filterwarnings('ignore')

# Load dataset
df = pd.read_csv('DataCoSupplyChainDataset.csv')
print(df.head())
print(df.info())

# Data Cleaning
df.drop_duplicates(inplace=True)
df['Delivery Status'] = df['Delivery Status'].astype(str)  # Standardize
df['Order Date'] = pd.to_datetime(df['Order Date'])
df.dropna(subset=['Category Name', 'Return Status'], inplace=True)
df['delivery_delay'] = pd.to_numeric(df['Delivery Delay (Days)'], errors='coerce')  # Use actual column

# Fixed Feature Engineering: Fulfillment rate based on shipped only
shipped_orders = df[df['Delivery Status'].isin(['Advance shipped', 'Shipped'])].shape[0]
total_orders = df.shape[0]
fulfillment_rate = (shipped_orders / total_orders) * 100
print(f"Overall Fulfillment Rate: {fulfillment_rate:.2f}%")

df['monthly_orders'] = df.groupby(df['Order Date'].dt.to_period('M')).transform('size')  # Per row for grouping

# EDA
# 1. Return rates by category (proxy for reasons)
return_by_cat = df.groupby(['Category Name', 'Return Status']).size().unstack(fill_value=0)
return_by_cat['return_rate'] = (return_by_cat['Returned'] / (return_by_cat['Returned'] + return_by_cat.get('Not Returned', 0))) * 100
plt.figure(figsize=(12,6))
return_by_cat['return_rate'].sort_values(ascending=False).plot(kind='bar')
plt.title('Return Rates by Category (%)')
plt.ylabel('Return Rate')
plt.xticks(rotation=45)
plt.show()

# 2. Delivery delays distribution
plt.figure(figsize=(8,6))
sns.histplot(df['delivery_delay'].dropna(), bins=30, kde=True)
plt.title('Distribution of Delivery Delays')
plt.show()

# 3. Logistics: Avg delay by ship mode
ship_mode_delay = df.groupby('Ship Mode')['delivery_delay'].mean().sort_values()
plt.figure(figsize=(10,6))
ship_mode_delay.plot(kind='bar')
plt.title('Average Delivery Delay by Ship Mode')
plt.show()

# Advanced Forecasting: SARIMA for monthly orders
monthly = df.groupby(df['Order Date'].dt.to_period('M')).size()
model = SARIMAX(monthly, order=(2,1,2), seasonal_order=(1,1,1,12))
fitted = model.fit(disp=False)
forecast = fitted.forecast(steps=6)
plt.figure(figsize=(10,4))
monthly.plot(label='Historical')
forecast.plot(label='SARIMA Forecast')
plt.title('Next 6 Months Order Forecast')
plt.legend()
plt.show()

# Insights
print("\nKey Insights:")
print("- Highest returns in 'ELECTRONICS': {:.2f}%".format(return_by_cat.loc['ELECTRONICS', 'return_rate']))
print("- Ship Mode 'Second Class' has lowest delays.")
print("- SARIMA forecast: Next 6 months ~{}".format(forecast.sum().astype(int)))
