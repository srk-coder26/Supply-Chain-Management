import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from statsmodels.tsa.arima.model import ARIMA
import warnings
warnings.filterwarnings('ignore')

# Load dataset
df = pd.read_csv('DataCoSupplyChainDataset.csv')  # Download and rename
print(df.head())
print(df.info())

# Data Cleaning
df.drop_duplicates(inplace=True)
df['delivery_time'] = pd.to_numeric(df['delivery_time'], errors='coerce')  # Assume days
df['order_date'] = pd.to_datetime(df['order_date'])
df.dropna(subset=['product_category', 'return_status'], inplace=True)

# Feature Engineering
df['delivery_delay'] = df['delivery_time'] - df['expected_delivery']  # Assume expected column
df['fulfillment_rate'] = (df['delivery_status'] == 'Shipped') / len(df) * 100
df['monthly_orders'] = df.groupby(df['order_date'].dt.to_period('M')).size()

# EDA
# 1. Return rates by category
return_by_cat = df.groupby('product_category')['return_status'].value_counts(normalize=True).unstack().fillna(0) * 100
plt.figure(figsize=(10,6))
return_by_cat.plot(kind='bar')
plt.title('Return Rates by Product Category (%)')
plt.xlabel('Category')
plt.ylabel('Return Rate')
plt.legend(title='Status')
plt.xticks(rotation=45)
plt.show()

# 2. Delivery delays distribution
plt.figure(figsize=(8,6))
sns.histplot(df['delivery_delay'].dropna(), bins=30, kde=True)
plt.title('Distribution of Delivery Delays')
plt.xlabel('Delay (Days)')
plt.show()

# 3. Supplier performance (assume supplier column)
if 'supplier' in df.columns:
    supplier_perf = df.groupby('supplier')['delivery_delay'].mean().sort_values()
    plt.figure(figsize=(10,6))
    supplier_perf.plot(kind='bar')
    plt.title('Average Delivery Delay by Supplier')
    plt.show()

# Forecasting: ARIMA for monthly orders
monthly = df.groupby(df['order_date'].dt.to_period('M')).size()
model = ARIMA(monthly, order=(1,1,1))
fitted = model.fit()
forecast = fitted.forecast(steps=6)
plt.figure(figsize=(10,4))
monthly.plot(label='Historical')
forecast.plot(label='Forecast')
plt.title('Next 6 Months Order Forecast')
plt.legend()
plt.show()

# Insights
print("\nKey Insights:")
print("- Highest returns in 'Electronics': {:.2f}%".format(return_by_cat.loc['Electronics', 'Returned']))
print("- Avg delivery delay: {:.2f} days".format(df['delivery_delay'].mean()))
print("- Forecasted orders: Next 6 months ~{}".format(forecast.sum()))